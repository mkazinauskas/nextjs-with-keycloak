# Keycloak issuer (realm) base URL, e.g. http://localhost:8080/realms/my-realm
NEXT_PUBLIC_OIDC_AUTHORITY=http://localhost:8080/realms/next-js-with-keycloak

# Public client id registered in the realm
NEXT_PUBLIC_OIDC_CLIENT_ID=nextjs-with-keycloak-app

# Optional custom scopes, defaults to "openid profile email"
NEXT_PUBLIC_OIDC_SCOPE="openid profile email"

# Absolute redirect URLs (must also be configured in the Keycloak client)
NEXT_PUBLIC_OIDC_REDIRECT_URI=http://localhost:3000/auth/callback
NEXT_PUBLIC_OIDC_POST_LOGOUT_REDIRECT_URI=http://localhost:3000/
